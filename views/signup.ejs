
    <div class="container">
      <div class="row">
        <div class="col-10 col-md-4 mx-auto">
            <div class="card-body text-center">
              <div class="verical-align">
                <div class="register">
                  <h1>Register</h1>
                  <p>Please fill in this form to create an account.</p>
                </div>
                <hr>
                <form action="/account/signup" method="POST">
                  <label for="firstName"><b>First Name</b></label>
                  <input class='w-100' type="text" placeholder="First Name" name="firstName" required>

                  <label for="lastName"><b>Last Name</b></label>
                  <input class='w-100' type="text" placeholder="Last Name" name="lastName" required>

                  <!-- <label for="Username"><b>Username</b></label>
                  <input class='w-100' type="text" placeholder="Username" name="Username" required> -->

                  <label for="email"><b>Email</b></label>
                  <input class='w-100' type="text" placeholder="Enter Email" name="email" required>


                  <label for="psw"><b>Password</b></label>
                  <input class='w-100' type="password" placeholder="Enter Password" name="psw" required>

                  <label for="pswRepeat"><b>Repeat Password</b></label>
                  <input class='w-100' type="password" placeholder="Repeat Password" name="pswRepeat" required>
                  <hr>
                  <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
                  <button type="submit" class="registerbtn">Register</button>
                </form>
              </div>
              <div class="container signin">
                <p>Already have an account? <a href="/account/signin">Sign in</a>.</p>
              </div>
            </div>

        </div>
      </div>
    </div>
